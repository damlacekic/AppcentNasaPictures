<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@drawable/pop_up_card"
    android:orientation="vertical"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/imageViewPopUp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_launcher_background" />
    <TextView
        android:id="@+id/textViewShootDate"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Damla"
        android:textSize="@dimen/popUpTextSize"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        ></TextView>
    <TextView
        android:id="@+id/textViewMachineName"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Damla"
        android:textSize="@dimen/popUpTextSize"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        ></TextView>

    <TextView
        android:id="@+id/textViewCamera"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Damla"
        android:textSize="@dimen/popUpTextSize"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        ></TextView>

    <TextView
        android:id="@+id/textViewMissionStatus"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Damla"
        android:textSize="@dimen/popUpTextSize"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/white">
    </TextView>

    <TextView
        android:id="@+id/textViewLaunchDate"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Damla"
        android:textSize="@dimen/popUpTextSize"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/white">
    </TextView>
    <TextView
        android:id="@+id/textViewLandingDate"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Damla"
        android:textSize="@dimen/popUpTextSize"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/white">
    </TextView>




</LinearLayout>